<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/setting_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息设置"
            android:textColor="#fff"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/wo_gushi"
            android:layout_width="85dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_tab_bg"
            android:clickable="true"
            android:gravity="left"
            android:orientation="horizontal">


        </LinearLayout>
    </RelativeLayout>
    <!-- 头像 -->
    <RelativeLayout
        android:id="@+id/rl_user_pic"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@drawable/btn_bottom_selector"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="头像"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/default_avatar" />

    </RelativeLayout>
    <!--分割线 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />
    <!-- 昵称 -->
    <RelativeLayout
        android:id="@+id/rl_user_nicheng"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/btn_bottom_selector"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="昵称"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tv_user_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="年轻人"
            android:textColor="@color/btn_gray_pressed"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>
    <!--分割线 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />
    <!-- 性别-->
    <RelativeLayout
        android:id="@+id/rl_user_xingbie"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/btn_bottom_selector"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="性别"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tv_user_xingbie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="男"
            android:textColor="@color/btn_gray_pressed"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>
    <!--分割线 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />
    <!-- 年龄-->
    <RelativeLayout
        android:id="@+id/rl_user_nianling"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/btn_bottom_selector"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="年龄"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tv_user_nianling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="21"
            android:textColor="@color/btn_gray_pressed"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>
    <!--分割线 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />
    <!-- 地区-->
    <RelativeLayout
        android:id="@+id/rl_user_chengshi"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/btn_bottom_selector"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="地区"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tv_user_chengshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="北京 朝阳"
            android:textColor="@color/btn_gray_pressed"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>
    <!--分割线 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />
    <!--职业 -->
    <RelativeLayout
        android:id="@+id/rl_user_zhiye"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/btn_bottom_selector"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="职业"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tv_user_zhiye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text=" "
            android:textColor="@color/btn_gray_pressed"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>
    <!--分割线 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />
    <!--个性签名 -->
    <RelativeLayout
        android:id="@+id/rl_user_qianming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bottom_selector"
        android:padding="10dip">

        <TextView
            android:id="@+id/s_gxqm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="个性签名"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tv_user_qianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/s_gxqm"
            android:gravity="right"
            android:paddingLeft="10dip"
            android:text=" "
            android:textColor="@color/btn_gray_pressed"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>
    <!--分割线 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#E6E6E6" />
    <!-- 动态-->
    <RelativeLayout
        android:id="@+id/rl_user_zainadongtai"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/btn_bottom_selector"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="在哪"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tv_user_zainadongtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="我在石景山鲁谷中街"
            android:textColor="@color/btn_gray_pressed"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>
</LinearLayout>
